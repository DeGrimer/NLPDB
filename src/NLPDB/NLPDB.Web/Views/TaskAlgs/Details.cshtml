@model NLPDB.Web.Data.TaskAlg

@{
    ViewData["Title"] = "Описание задачи";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Задача</h1>

<div>
    <h4>TaskAlg</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
        Алгоритм
        </dt>
        @foreach(var t in Model.Algorithms)
        {
            <dd class = "col-sm-10">
            <a asp-controller="Algorithm" asp-action="Details" asp-route-id="@t.Id">@t.Name</a>
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Изменить</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>
